<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/bgColor"
    tools:context="com.mycompany.incubatoralpha.IdeaSwipeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Insert Idea Title Here"
        android:id="@+id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_column="0"
        android:layout_row="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/descriptionColTextView"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This is where the description text will go"
        android:id="@+id/experienceTextView"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_columnSpan="2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/descriptionColTextView"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description about the founder who created the app goes here"
        android:id="@+id/aboutTextView"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_below="@+id/founderColTextview"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About the founder:"
        android:id="@+id/founderColTextview"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_below="@+id/experienceTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/profileButton"
        android:onClick="profileButton"
        android:layout_below="@+id/aboutTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        android:layout_alignEnd="@+id/aboutTextView"
        android:background="#035E24"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tags:"
        android:id="@+id/tagsTextView"
        android:layout_below="@+id/profileButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:textColor="#ffffff" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/founderColTextview"
        android:id="@+id/tableRow">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton2"
            android:src="@drawable/abc_ic_clear_mtrl_alpha"
            android:layout_weight="0.07"
            android:background="#035E24" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015"
            android:background="#035E24" />

    </TableRow>

</RelativeLayout>
